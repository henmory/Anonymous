<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/message_list_phone_num_key"
        android:text="phone_num: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/message_list_phone_num_value"
        android:layout_toRightOf="@id/message_list_phone_num_key"
        android:hint="13488783239"/>
    <View
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/message_list_vertical_divider"
        android:layout_toRightOf="@id/message_list_phone_num_value"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/message_list_msg_id_key"
        android:layout_toRightOf="@id/message_list_vertical_divider"
        android:text="msg_id: "/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/message_list_msg_id_value"
        android:layout_toRightOf="@id/message_list_msg_id_key"
        android:hint="23"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:id="@+id/message_msg_content"
        android:layout_below="@id/message_list_phone_num_key"
        android:text="i am hungry"/>
</RelativeLayout>